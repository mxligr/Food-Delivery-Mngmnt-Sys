<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.RegisterController">
    <children>
        <Label text="Make a new Account" />
      <TextField fx:id="usernameTextField" promptText="username" />
      <PasswordField fx:id="passwordField" promptText="password" />
      <PasswordField fx:id="confirmPasswordField" promptText="confirm password" />
      <Text fx:id="passwordText" strokeType="OUTSIDE" strokeWidth="0.0" />
      <Button mnemonicParsing="false" onAction="#registerAction" text="Register" />
      <HBox alignment="CENTER" prefHeight="37.0" prefWidth="200.0" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToLogin" text="Login" />
              <Button fx:id="exitButton" onAction="#exitButtonAction" text="Exit" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
